<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
	<display-name>ProblemSelector</display-name>
	<context-param>
		<param-name>folder</param-name>
		<param-value>/Users/simstudent/Documents/Watson</param-value>
		<description>Parent folder for Problem Bank</description>
	</context-param>
    <context-param>
       <param-name>ALP</param-name>
       <param-value>https://kona.education.tamu.edu:2401/ALP/</param-value>
    </context-param>
	<servlet>
		<servlet-name>ProblemSelector</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
		   <param-name>com.sun.jersey.spi.container.ContainerResponseFilters</param-name>
		   <param-value>edu.tamu.ieclab.service.CORSFilter</param-value>
		</init-param>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>edu.tamu.ieclab.service</param-value>
		</init-param>
		<init-param>
			<param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
			<param-value>true</param-value>
		</init-param>
		
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>ProblemSelector</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>